<!-- Default home page -->
<div class="" xmlns="http://www.w3.org/1999/html">
  <div class="main container">
    <div class="row">
      <div class="contact-us col s12 m12">
        <div class="card  darken-1">
          <div class="card-content">
            <div class="row">
              <form method="POST" class="col s12" id="contact-us">
                <div class="row">
                  <h5 class="center-align">You can contact us at</h5>

                  <div class="input-field col s6 white-text">
                    <i class="material-icons prefix">phone</i>
                    <input disabled id="phone" type="tel" value="9000259316 9640919291" class="validate">
                    <label for="phone">Telephone</label>
                  </div>
                  <div class="input-field col s6 white-text">
                    <i class="material-icons prefix">email</i>
                    <input disabled id="email" type="tel" value="cybadigital.com" class="validate">
                    <label for="email">Email</label>
                  </div>
                </div>
                <% if (!success) { %>
                <h5 class="center-align">Or Write to us at</h5>
                <div class="row">
                  <div class="input-field col s6">
                    <input id="first_name" name="firstName" type="text" required="required" class="validate">
                    <label for="first_name">First Name</label>
                  </div>

                  <div class="input-field col s6">
                    <input id="last_name" name="lastName" type="text" required="required" class="validate">
                    <label for="last_name">Last Name</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="email" name="email" type="email" required="required" class="validate">
                    <label for="email">Email</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <textarea id="message" name="message" required="required" class="materialize-textarea"></textarea>
                    <label for="message">How can we help you?</label>
                  </div>
                </div>
                <div class="row right-align">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons">send</i>
                  </button>
                </div>
                <% } else { %>
                <div class="row">
                  <div class="input-field col s12">
                    <h5 class="center-align">Thank you for writing.We will ge back to you soon.</h5>
                    </div>
                  </div>
                <div class="row">
                  <div class="col offset-l4">
                    <a href="/gallery">
                      <button class="btn waves-effect waves-light center-align"  name="action">Visit Our Gallery
                    </button>
                    </a>
                  </div>
                </div>
                <% } %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
